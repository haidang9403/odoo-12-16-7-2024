<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_bank_view_tree" model="ir.ui.view">
            <field name="name">res.bank.view.tree</field>
            <field name="model">res.bank</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="action_banklist_view" model="ir.actions.act_window">
            <field name="name">Bank list</field>
            <field name="res_model">res.bank</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="res_bank_view_tree"/>
        </record>
        <menuitem id="menu_opensea_accounting" name="Accounting" parent="sea_menu_base.sea_menu_reports" sequence="60"/>
        <menuitem id="menu_banklist"
            name="Bank list"
            action="action_banklist_view"
            sequence="5"
            parent="menu_opensea_accounting"/>
    </data>
</odoo>
