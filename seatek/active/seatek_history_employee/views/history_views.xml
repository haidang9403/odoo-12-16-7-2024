<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sea_employee_status_history">
            <field name="name">sea.employee.history.current.status.tree</field>
            <field name="model">sea.employee.history.current.status</field>
            <field name="arch" type="xml">
                <tree create="0" editable="top" string="Employee Status History">
                    <field name="employee_multi_id" invisible="1"/>
                    <field name="history_id" invisible="1"/>
                    <field invisible="1" name="employee_id"/>
                    <field name="employee_current_status_old" readonly="1"/>
                    <field name="employee_current_status" readonly="1"/>
                    <field name="reason_leaving" readonly="1"/>
                    <field name="resignation_date" readonly="1"/>
                    <field name="leaving_to_date" readonly="1"/>
                    <field name="active" attrs="{'readonly': [('current','=',True)]}" invisible="1"/>
                    <field name="current" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="sea_employee_status_history_search" model="ir.ui.view">
            <field name="name">sea.employee.history.current.status.filter</field>
            <field name="model">sea.employee.history.current.status</field>
            <field name="arch" type="xml">
                <search string="History current status filter">
                    <filter name="active" string="Archive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="sea_employee_history">
            <field name="name">sea.employee.history.tree</field>
            <field name="model">sea.employee.history</field>
            <field name="arch" type="xml">
                <tree create="false" string="Employee History">
                    <field name="employee_multi_id" invisible="1"/>
                    <field name="employee_id" invisible="1"/>
<!--                    <field name ="name" invisible="1"/>-->
                    <field name="updated_date"/>
                    <field name="user_id"/>
                    <field name="changed_field"/>
                    <field name="current_value_before"/>
                    <field name="current_value_after"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sea_employee_salary_history_tree">
            <field name="name">sea.employee.history.salary.tree</field>
            <field name="model">sea.employee.history.salary</field>
            <field name="arch" type="xml">
                <tree create="false" string="Salary History">
                    <field name="employee_multi_id" invisible="1"/>
                    <field name="employee_id" invisible="1"/>
<!--                    <field name ="name" invisible="1"/>-->
                    <field name ="contract_id" invisible="0"/>
                    <field name="user_id" invisible="0"/>
                    <field name="updated_date"/>
                    <field name="reason_change"/>
                    <field name="sum_salary_company"/>
                    <field name="sum_salary_seagroup"/>
                </tree>
            </field>
        </record>

        <record id="sea_employee_salary_history_company_graph" model="ir.ui.view">
            <field name="name">sea.employee.history.salary.graph.company</field>
            <field name="model">sea.employee.history.salary</field>
            <field name="arch" type="xml">
                <graph string="Salary Chart Company">
                    <field name="updated_date" type="row"/>
                    <field name="sum_salary_company" type="row"/>
                    <field name="sum_salary_seagroup" type="row"/>
                </graph>
            </field>
        </record>

    </data>
</odoo>
