<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_contract_inherit" model="ir.ui.view">
            <field name="name">res.partner.contract.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[1]" position="before">
                    <page string="Contract" autofocus="autofocus">
                        <h2 style="color: #7C7BAD;">Contract Information</h2>
                        <group>
                            <field name="sea_customer_contract_number" column="1"/>
                        </group>
                        <group>
                            <field name="sea_contract_start_date"/>
                        </group>
                        <group>
                            <field name="sea_contract_to_date"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>