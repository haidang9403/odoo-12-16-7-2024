    <record id="sea_hr_calendar_employee_view_form" model="ir.ui.view">
        <field name="name">sea.hr.calendar.employee.form</field>
        <field name="model">sea.hr.calendar.employee</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <group>
                    <group>
                        <field name="domain_day" invisible="1" widget="many2many_tags"/>
                        <field name="company_id"/>
                        <field name="s_identification_id" readonly="True"/>
                        <field name="employee_multi_id" options='{"no_open": True}'/>
                        <field name="department_id" options='{"no_open": True}'/>
                        <field name="job_id" options='{"no_open": True}'/>
                        <field name="job_code_compute" invisible="1"/>
                        <field name="attendance_id" invisible="1"/>
                        <field name="last_day_of_month" invisible="1"/>
                    </group>
                    <group>
                        <field name="month" invisible="1"/>
                        <field name="year" invisible="1"/>
                        <field name="month_year_compute"/>
                    </group>
                </group>
                <group>
                    <group>
                        <group>
                            <field name="day_1" string="Ngày 1" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_2" string="Ngày 2" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_3" string="Ngày 3" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_4" string="Ngày 4" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_5" string="Ngày 5" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_6" string="Ngày 6" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_7" string="Ngày 7" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_8" string="Ngày 8" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_9" string="Ngày 9" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_10" string="Ngày 10" options="{'no_open':True}" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="day_11" string="Ngày 11" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_12" string="Ngày 12" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_13" string="Ngày 13" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_14" string="Ngày 14" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_15" string="Ngày 15" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_16" string="Ngày 16" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_17" string="Ngày 17" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_18" string="Ngày 18" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_19" string="Ngày 19" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_20" string="Ngày 20" options="{'no_open':True}" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="day_21" string="Ngày 21" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_22" string="Ngày 22" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_23" string="Ngày 23" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_24" string="Ngày 24" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_25" string="Ngày 25" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_26" string="Ngày 26" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_27" string="Ngày 27" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_28" string="Ngày 28" options="{'no_open':True}" widget="many2many_tags"/>
                            <field name="day_29" string="Ngày 29" options="{'no_open':True}"
                                   attrs="{'invisible':[('last_day_of_month','not in',[31, 30, 29])]}" widget="many2many_tags"/>
                            <field name="day_30" string="Ngày 30" options="{'no_open':True}"
                                   attrs="{'invisible':[('last_day_of_month','not in',[31,30])]}" widget="many2many_tags"/>
                            <field name="day_31" string="Ngày 31" options="{'no_open':True}"
                                   attrs="{'invisible':[('last_day_of_month','!=',31)]}" widget="many2many_tags"/>
                        </group>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="sea_hr_calendar_employee_action" model="ir.actions.act_window">
        <field name="name">Calendar of Employee for Month</field>
        <field name="res_model">sea.hr.calendar.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id','in',company_ids)]</field>
        <field name="search_view_id" ref="sea_hr_calendar_employee_view_search"/>
        <field name="view_id" eval="False"/>
    </record>
</odoo>