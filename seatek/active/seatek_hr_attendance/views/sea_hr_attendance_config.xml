<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sea_hr_attendance_shift_view_tree" model="ir.ui.view">
        <field name="name">sea.hr.attendance.shift.tree</field>
        <field name="model">sea.hr.attendance.shift</field>
        <field name="arch" type="xml">
            <tree duplicate="false" class="treeview_scrollable">
                <field name="company_id"/>
                <field name="department_id"/>

                <field name="name"/>
                <field name="abbreviations"/>
                <field name="default_shift"/>
                <field name="number_time"/>
                <field name="work_day"/>
                <field name="first_in_late_out"/>

                <field name="hour_start" widget="float_time"/>
                <field name="hour_start_start" widget="float_time"
                        attrs="{'required': [('hour_start','!=', 0)]}" invisible="1"/>
                <field name="hour_start_end" widget="float_time"
                       attrs="{'required': [('hour_start','!=', 0)]}" invisible="1"/>

                <field name="hour_start_noon" widget="float_time"/>
                <field name="hour_start_noon_start" widget="float_time"
                       attrs="{'required': [('hour_start_noon','!=', 0)]}" invisible="1"/>
                <field name="hour_start_noon_end" widget="float_time"
                      attrs="{'required': [('hour_start_noon','!=', 0)]}" invisible="1"/>

                <field name="hour_end_noon" widget="float_time"/>
                <field name="hour_end_noon_start" widget="float_time"
                      attrs="{'required': [('hour_end_noon','!=', 0)]}" invisible="1"/>
                <field name="hour_end_noon_end" widget="float_time"
                     attrs="{'required': [('hour_end_noon','!=', 0)]}" invisible="1"/>

                <field name="hour_end" widget="float_time"/>
                <field name="hour_end_start" widget="float_time"
                       attrs="{'required': [('hour_end','!=', 0)]}" invisible="1"/>
                <field name="hour_end_end" widget="float_time"
                       attrs="{'required': [('hour_end','!=', 0)]}" invisible="1"/>

                <field name="work_break"/>
                <field name="type_of_shift"/>
                <field name="login_logout"/>
                <field name="for_full_time_shift"/>
            </tree>
        </field>
    </record>
    <record id="sea_hr_attendance_shift_view_form" model="ir.ui.view">
        <field name="name">sea.hr.attendance.shift.form</field>
        <field name="model">sea.hr.attendance.shift</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" options='{"no_open": True}'/>
                            <field name="default_shift"/>
                            <field name="department_id" options='{"no_open": True}'/>
                            <field name="name"/>
                            <field name="abbreviations"/>
                            <field name="number_time"/>
                            <field name="work_day"/>
                        </group>
                        <group>
                            <group>
                                <field name="type_of_shift"/>
                                <field name="first_in_late_out" attrs="{'invisible': ['|', ('work_break','=', True), ('type_of_shift','=', 'full_time_shift')]}"/>
                                <field name="work_break" attrs="{'invisible': ['|',('first_in_late_out', '=', True),('type_of_shift','==', 'full_time_shift')]}"/>
                                <field name="login_logout"/>
                                <field name="for_full_time_shift" attrs="{'invisible': [('type_of_shift','!=', 'full_time_shift')], 'required': [('type_of_shift','=', 'full_time_shift')]}"/>
                            </group>
                            <group>
                                <field name="thu_2"/>
                                <field name="thu_3"/>
                                <field name="thu_4"/>
                                <field name="thu_5"/>
                                <field name="thu_6"/>
                                <field name="thu_7"/>
                                <field name="thu_8"/>
                            </group>
                        </group>
                    </group>
                    <group>
                        <group>
                            <group>
                                <field name="hour_start" widget="float_time"/>
                                <field name="hour_start_start" widget="float_time"
                                        attrs="{'required': [('hour_start','!=', 0)], 'invisible': ['|',('hour_start','=', 0),('first_in_late_out', '=', True)]}"/>
                                <field name="hour_start_end" widget="float_time"
                                       attrs="{'required': [('hour_start','!=', 0)], 'invisible': ['|',('hour_start','=', 0),('first_in_late_out', '=', True)]}"/>
                            </group>
                            <group attrs="{'invisible': ['|',('first_in_late_out','=', True),('work_break','=', False)]}">
                                <field name="hour_start_noon" widget="float_time"/>
                                <field name="hour_start_noon_start" widget="float_time"
                                       attrs="{'required': [('hour_start_noon','!=', 0)], 'invisible': [('hour_start_noon','=', 0)]}"/>
                                <field name="hour_start_noon_end" widget="float_time"
                                      attrs="{'required': [('hour_start_noon','!=', 0)], 'invisible': [('hour_start_noon','=', 0)]}"/>
                            </group>
                        </group>
                        <group>
                            <group attrs="{'invisible': ['|',('first_in_late_out','=', True),('work_break','=', False)]}">
                                <field name="hour_end_noon" widget="float_time"/>
                                <field name="hour_end_noon_start" widget="float_time"
                                      attrs="{'required': [('hour_end_noon','!=', 0)], 'invisible': [('hour_end_noon','=', 0)]}"/>
                                <field name="hour_end_noon_end" widget="float_time"
                                     attrs="{'required': [('hour_end_noon','!=', 0)], 'invisible': [('hour_end_noon','=', 0)]}"/>
                            </group>
                            <group>
                                <field name="hour_end" widget="float_time"/>
                                <field name="hour_end_start" widget="float_time"
                                       attrs="{'required': [('hour_end','!=', 0)], 'invisible': ['|',('hour_end','=', 0),('first_in_late_out', '=', True)]}"/>
                                <field name="hour_end_end" widget="float_time"
                                       attrs="{'required': [('hour_end','!=', 0)], 'invisible': ['|',('hour_end','=', 0),('first_in_late_out', '=', True)]}"/>
                            </group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sea_hr_attendance_shift_action" model="ir.actions.act_window" >
        <field name="name">Attendances Configuration Shift For Company</field>
        <field name="res_model">sea.hr.attendance.shift</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id','in',company_ids)]</field>
        <field name="view_id" eval="False"/>
    </record>

    <record id="sea_hr_attendance_shift_employee_view_search" model="ir.ui.view">
        <field name="name">sea.hr.attendance.shift.employee.search</field>
        <field name="model">sea.hr.attendance.shift.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="s_identification_id"/>
                <field name="employee_multi_id"/>
                <field name="company_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="attendance_config_ids"/>
                <field name="not_attendance"/>
                <separator/>
                <filter string="Not Attendance" domain="[('not_attendance', '=', True)]" name="not_att"/>
                <filter string="Attendance" domain="[('not_attendance', '=', False)]" name="not_att"/>
                <group  expand='0' string='Group by...'>
                    <filter string='Công ty' domain="[]" name="company_id_group" context="{'group_by': 'company_id'}"/>
                    <filter string='Phòng Ban' domain="[]" name="department_id_group" context="{'group_by': 'department_id'}"/>
                    <filter string='Chức vụ' domain="[]" name="job_id_group" context="{'group_by': 'job_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sea_hr_attendance_shift_employee_view_tree" model="ir.ui.view">
            <field name="name">sea.hr.attendance.shift.employee.tree</field>
            <field name="model">sea.hr.attendance.shift.employee</field>
            <field name="arch" type="xml">
                <tree editable="top" class="treeview_scrollable">
                    <field name="s_identification_id"/>
                    <field name="employee_multi_id" options='{"no_open": True}'/>
                    <field name="company_id" invisible="0"/>
                    <field name="department_id" invisible="0"/>
                    <field name="attendance_config_ids"
                        domain="[('company_id', '=', company_id), '|', ('department_id', 'in', [None, False]), ('department_id', '=', department_id)]" widget="many2many_tags"/>
                    <field name="not_attendance" invisible="0"/>
                </tree>
            </field>
        </record>

    <record id="sea_hr_attendance_shift_employee_action" model="ir.actions.act_window" >
        <field name="name">Attendances Shift Employee</field>
        <field name="res_model">sea.hr.attendance.shift.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id','in',company_ids)]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="sea_hr_attendance_shift_employee_view_search"/>

    </record>

    <record id="sea_hr_timesheet_symbol_view_tree" model="ir.ui.view">
        <field name="name">sea.hr.timesheet.symbol.tree</field>
        <field name="model">sea.hr.timesheet.symbol</field>
        <field name="arch" type="xml">
            <tree editable="top" class="treeview_scrollable">
                <field name="id" invisible="1"/>
                <field name="name" invisible="1"/>
                <field name="company_id" attrs="{'readonly':[('symbol', 'in', ['N','X','X/2','OT'])]}"/>
                <field name="symbol" attrs="{'readonly':[('symbol', 'in', ['N','X','X/2','OT'])]}"/>
                <field name="note" attrs="{'readonly':[('symbol', 'in', ['N','X','X/2','OT'])]}"/>
                <field name="work_number" attrs="{'readonly':[('symbol', 'in', ['N','X','X/2','OT'])]}"/>
                <field name="default_attendance"/>
                <field name="only_sign" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="sea_hr_timesheet_symbol_view_search" model="ir.ui.view">
        <field name="name">sea.hr.timesheet.symbol.search</field>
        <field name="model">sea.hr.timesheet.symbol</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="symbol"/>
                <field name="work_number"/>
                <separator/>
                <filter string="Số công 0.0" domain="[('work_number', '=', 0)]" name="sc0"/>
                <filter string="Số công 0.5" domain="[('work_number', '=', 0.5)]" name="sc0_5"/>
                <filter string="Số công 1.0" domain="[('work_number', '=', 1)]" name="sc1"/>
                <filter string="Số công 1.5" domain="[('work_number', '=', 1.5)]" name="sc1_5"/>
                <filter string="Số công 2.0" domain="[('work_number', '=', 2)]" name="sc2"/>
                <group  expand='0' string='Group by...'>
                    <filter string='Work number' domain="[]" name="work_number_group" context="{'group_by': 'work_number'}"/>
                    <filter string='Default Attendance' domain="[]" name="default_attendance_group" context="{'group_by': 'default_attendance'}"/>
                    <filter string='Sign Only' domain="[]" name="only_sign_group" context="{'group_by': 'only_sign'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sea_hr_timesheet_symbol_action" model="ir.actions.act_window">
        <field name="name">Timesheet Symbol</field>
        <field name="res_model">sea.hr.timesheet.symbol</field>
        <field name="view_mode">tree</field>
        <field name="domain">['|',('company_id','in',company_ids),('company_id','=',False)]</field>
        <field name="view_id" eval="False"/>
    </record>
</odoo>
