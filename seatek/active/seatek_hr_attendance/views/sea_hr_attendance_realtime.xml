<odoo>
    <record id="sea_hr_attendance_realtime_view_tree" model="ir.ui.view">
        <field name="name">sea.hr.attendance.realtime.tree</field>
        <field name="model">sea.hr.attendance.realtime</field>
        <field name="arch" type="xml">
            <tree duplicate="false" create="false" class="treeview_scrollable">
                <field name="s_identification_id"/>
                <field name="mark_as_todo" invisible="1"/>
                <field name="employee_multi_id" invisible="0" string="Employee"/>
                <field name="company_id" invisible="1"/>

                <field name="datetime_compute" invisible="0"/>
                <field name="so_cong" string="Work number" invisible="1"/>
                <field name="symbol" invisible="0"/>
                <field name="symbol_sign" invisible="0"/>

                <field name="shift" invisible="0" domain="[('company_id', '=', company_id)]" widget="many2many_tags"/>
                <field name="shift_details" invisible="1" domain="[('company_id', '=', company_id)]"/>

                <field name="day" invisible="0"/>
                <field name="month" invisible="0"/>
                <field name="year" invisible="0"/>
            </tree>
        </field>
    </record>
    <record id="sea_hr_attendance_realtime_view_form" model="ir.ui.view">
        <field name="name">sea.hr.attendance.realtime.form</field>
        <field name="model">sea.hr.attendance.realtime</field>
        <field name="arch" type="xml">
            <form duplicate="false" create="false">
                <header>
                    <field name="mark_as_todo" invisible="1"/>
                    <button groups="seatek_hr_attendance.hr_attendance_manager" string="Mark as Todo" name="action_confirm" type="object"
                            class="btn-primary attendance_button" attrs="{'invisible': [('mark_as_todo', '=', True)]}"/>
                    <button groups="seatek_hr_attendance.hr_attendance_manager" string="Un Mark as Todo" name="action_un_confirm" type="object"
                            class="btn-primary attendance_button"
                            attrs="{'invisible': [('mark_as_todo', '=', False)]}"/>
                </header>
                <group>
                    <group>
                        <field name="company_id" invisible="0" options='{"no_open": True}' readonly="1"/>
                        <field name="datetime_compute" invisible="0"/>
                        <field name="domain_day" invisible="1" widget="many2many_tags"/>
                        <field name="s_identification_id" readonly="True"/>
                        <field name="employee_multi_id" invisible="0" options='{"no_open": True}' readonly="True"/>
                        <field name="employee_multi_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="shift" invisible="0" widget="many2many_tags"
                               attrs="{'readonly':[('mark_as_todo','=',True)]}"/>
                        <field name="symbol" invisible="0" options='{"no_open": True}'
                               attrs="{'readonly':[('mark_as_todo','=',True)]}"/>
                        <field name="symbol_sign" invisible="0" options='{"no_open": True}'
                               attrs="{'readonly':[('mark_as_todo','=',True)]}"/>
                        <field name="so_cong" invisible="1" readonly="True"/>
                        <field name="day" invisible="1"/>
                        <field name="month" invisible="1"/>
                        <field name="year" invisible="1"/>
                    </group>
                </group>
                <group>
                    <field name="overtime" invisible="0" widget="float_time"
                           attrs="{'readonly':[('mark_as_todo','=',True)]}"/>
                </group>
                <group>
                    <notebook>
                        <page string="Chi tiết ca làm việc">
                            <field name="shift_details" invisible="0" attrs="{'readonly':[('mark_as_todo','=',True)]}">
                                <tree>
                                    <field name="employee_multi_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>

                                    <field name="shift" invisible="0" domain="[('company_id', '=', company_id)]"/>
                                    <field name="overtime" invisible="0" widget="float_time"/>
                                    <field name="overtime_sign" invisible="1" widget="float_time" readonly="1"/>
                                    <field name="overtime_sign_offline" invisible="1" widget="float_time"/>
                                    <field name="overtime_hr" invisible="1" widget="float_time"/>
                                    <field name="check_overtime" invisible="1" widget="float_time"/>
                                    <field name="attendance_realtime_id" invisible="1"/>

                                    <field string="Check in" name="check_in" invisible="0"/>
                                    <field string="Check out noon" name="check_out_noon" invisible="0"/>
                                    <field string="Check in noon" name="check_in_noon" invisible="0"/>
                                    <field string="Check out" name="check_out" invisible="0"/>

                                    <field string="Check in late" name="check_in_late" invisible="0"/>
                                    <field string="Check out soon" name="check_out_soon" invisible="0"/>
                                    <field string="Check out noon late" name="check_in_noon_late" invisible="0"/>
                                    <field string="Check out noon soon" name="check_out_noon_soon" invisible="0"/>
                                    <field name="note" invisible="0"/>
                                    <field name="explanation_approved" invisible="0"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </group>
            </form>
        </field>
    </record>
