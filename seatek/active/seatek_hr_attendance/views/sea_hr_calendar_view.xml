    <record id="sea_hr_calendar_of_one_employee_action" model="ir.actions.server">
        <field name="name">Test</field>
        <field name="model_id" ref="model_sea_hr_calendar"/>
        <field name="state">code</field>
        <field name="code">
            action = model.calendar_employee()
        </field>
    </record>



    <record id="shift_employee_date_from_to_tree" model="ir.ui.view">
        <field name="name">shift.employee.date.from.to.tree</field>
        <field name="model">shift.employee.date.from.to</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id" invisible="0"/>
                <field name="user_id_create" invisible="0"/>
                <field name="shifts" widget="many2many_tags"/>
                <field name="type"/>
                <field name="domain_employee" widget="many2many_tags" invisible="1"/>
                <field name="employee_multi_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="shift_employee_date_from_to_tree_apply" model="ir.ui.view">
        <field name="name">shift.employee.date.from.to.tree.apply</field>
        <field name="model">shift.employee.date.from.to</field>
        <field name="arch" type="xml">
            <tree string="Apply" create="0" class="treeview_scrollable">
                <button name="apply_shift_current_month" string="Apply" type="object" class="btn-primary"
                    help="Điều này sẽ thay đổi ca làm việc của một số NS cho tháng"/>
                <field name="company_id" invisible="1"/>
                <field name="shifts" widget="many2many_tags"/>
                <field name="type"/>
                <field name="domain_employee" widget="many2many_tags" invisible="1"/>
                <field name="employee_multi_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="shift_employee_date_from_to_form" model="ir.ui.view">
        <field name="name">shift.employee.date.from.to.form</field>
        <field name="model">shift.employee.date.from.to</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <header>
<!--                    <button name="apply_shift_current_month" string="Apply" type="object" class="btn-primary"-->
<!--                            help="Điều này sẽ thay đổi ca làm việc của một số NS cho tháng"/>-->
<!--                    <button name="unapply_shift_current_month" string="Unapply" type="object" class="btn-primary"-->
<!--                            help="Điều này sẽ thay đổi ca làm việc của một số NS cho tháng"/>-->
                </header>
                <group>
                    <group>
                        <field name="company_id" options='{"no_open": True, "no_create": True}'/>
                        <field name="user_id_create" options='{"no_open": True, "no_create": True}' readonly="1"/>
                        <field name="type"/>
                    </group>
                    <group>
                        <field name="domain_employee" widget="many2many_tags" invisible="1"/>
                        <field name="employee_multi_ids" widget="many2many_tags"/>
                        <field name="date_even_uneven" attrs="{'invisible': [('type','!=', 2)]}"/>
                    </group>
                </group>
                <group>
                    <field name="shifts" widget="many2many_tags" options='{"no_open": True, "no_create": True}'/>
                </group>
                <group>
                    <field name="attendance_id_apply_list" readonly="1" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                </group>
                <notebook>
                    <page string="Khoảng thời gian" attrs="{'invisible': [('type','!=', 3)]}">
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                    </page>
                    <page string="Thứ" attrs="{'invisible': [('type','!=', 1)]}">
                        <group>
                            <field name="thu_2"/>
                            <field name="thu_3"/>
                            <field name="thu_4"/>
                            <field name="thu_5"/>
                            <field name="thu_6"/>
                            <field name="thu_7"/>
                            <field name="thu_8"/>
                        </group>
                    </page>
                    <page string="Ngày" attrs="{'invisible': [('type','!=', 2)]}">
                        <group>
                            <group>
                                <group>
                                    <field name="day_1"/>
                                    <field name="day_2"/>
                                    <field name="day_3"/>
                                    <field name="day_4"/>
                                    <field name="day_5"/>
                                    <field name="day_6"/>
                                    <field name="day_7"/>
                                </group>
                                <group>
                                    <field name="day_8"/>
                                    <field name="day_9"/>
                                    <field name="day_10"/>
                                    <field name="day_11"/>
                                    <field name="day_12"/>
                                    <field name="day_13"/>
                                    <field name="day_14"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="day_15"/>
                                    <field name="day_16"/>
                                    <field name="day_17"/>
                                    <field name="day_18"/>
                                    <field name="day_19"/>
                                    <field name="day_20"/>
                                    <field name="day_21"/>
                                    <field name="day_22"/>
                                </group>
                                <group>
                                    <field name="day_23"/>
                                    <field name="day_24"/>
                                    <field name="day_25"/>
                                    <field name="day_26"/>
                                    <field name="day_27"/>
                                    <field name="day_28"/>
                                    <field name="day_29"/>
                                    <field name="day_30"/>
                                    <field name="day_31"/>
                                </group>
                            </group>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="shift_employee_date_from_to_action" model="ir.actions.act_window">
        <field name="name">Shift of employees</field>
        <field name="res_model">shift.employee.date.from.to</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('user_id_create','=',uid), ('company_id','in',company_ids)]</field>
        <field name="view_id" eval="False"/>
    </record>
    <record id="shift_employee_date_from_to_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="shift_employee_date_from_to_tree"/>
        <field name="act_window_id" ref="shift_employee_date_from_to_action"/>
    </record>
    <record id="shift_employee_date_from_to_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="shift_employee_date_from_to_form"/>
        <field name="act_window_id" ref="shift_employee_date_from_to_action"/>
    </record>

</odoo>