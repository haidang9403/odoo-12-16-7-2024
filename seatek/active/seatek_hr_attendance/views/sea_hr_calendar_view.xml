<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sea_hr_calendar_view_search" model="ir.ui.view">
        <field name="name">sea.hr.calendar.search</field>
        <field name="model">sea.hr.calendar</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_multi_id"/>
                <field name="month"/>
                <field name="year"/>
                <field name="shifts"/>
                <separator/>
                <filter string="Tháng 1" domain="[('month', '=', 1)]" name="Jan"/>
                <filter string="Tháng 2" domain="[('month', '=', 2)]" name="Feb"/>
                <filter string="Tháng 3" domain="[('month', '=', 3)]" name="Mar"/>
                <filter string="Tháng 4" domain="[('month', '=', 4)]" name="Apr"/>
                <filter string="Tháng 5" domain="[('month', '=', 5)]" name="May"/>
                <filter string="Tháng 6" domain="[('month', '=', 6)]" name="Jun"/>
                <filter string="Tháng 7" domain="[('month', '=', 7)]" name="Jul"/>
                <filter string="Tháng 8" domain="[('month', '=', 8)]" name="Aug"/>
                <filter string="Tháng 9" domain="[('month', '=', 9)]" name="Sep"/>
                <filter string="Tháng 10" domain="[('month', '=', 10)]" name="Oct"/>
                <filter string="Tháng 11" domain="[('month', '=', 11)]" name="Nov"/>
                <filter string="Tháng 12" domain="[('month', '=', 12)]" name="Dec"/>
                <separator/>
                <filter string="Năm 2023" domain="[('year', '=', 2023)]" name="Year"/>
                <filter string="Năm 2024" domain="[('year', '=', 2024)]" name="Year"/>
                <filter string="Năm 2025" domain="[('year', '=', 2025)]" name="Year"/>
                <group  expand='0' string='Group by...'>
                    <filter string='Ca' domain="[]" name="shifts_group" context="{'group_by': 'shifts'}"/>
                    <filter string='Công ty' domain="[]" name="company_id_group" context="{'group_by': 'company_id'}"/>
                    <filter string='Phòng Ban' domain="[]" name="department_id_group" context="{'group_by': 'department_id'}"/>
                    <filter string='Chức vụ' domain="[]" name="job_id_group" context="{'group_by': 'job_id'}"/>
                    <filter string='Tháng' domain="[]" name="month_group" context="{'group_by': 'month'}"/>
                    <filter string='Năm' domain="[]" name="year_group" context="{'group_by' : 'year'}"/>
                    <filter string='Họ và tên' domain="[]" name="employee_multi_id_group" context="{'group_by' : 'employee_multi_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="sea_hr_calendar_view_tree" model="ir.ui.view">
        <field name="name">sea.hr.calendar.tree</field>
        <field name="model">sea.hr.calendar</field>
        <field name="arch" type="xml">
<!--            <tree js_class="attendance_tree" create="false" class="treeview_scrollable">-->
            <tree create="false" class="treeview_scrollable">
                <field name="employee_multi_id"/>

                <field name="domain_day" invisible="1"/>
                <field name="domain_employee" invisible="1"/>
                <field name="user_ids" options='{"no_open": True}' invisible="1"/>
                <field name="job_code_compute" invisible="1"/>
                <field name="company_code" invisible="1"/>
                <field name="department_code" invisible="1"/>
                <field name="job_code" invisible="1"/>

                <field name="company_id"/>
                <field name="month" invisible="1"/>
                <field name="year" invisible="1"/>
                <field name="day" invisible="1"/>

                <field name="shifts"/>
                <field name="date_from"/>
                <field name="date_to"/>

            </tree>
        </field>
    </record>
    <record id="sea_hr_calendar_view_form" model="ir.ui.view">
        <field name="name">sea.hr.calendar.form</field>
        <field name="model">sea.hr.calendar</field>
        <field name="arch" type="xml">
            <form js_class="calendar_calendar_form_view" duplicate="false" create="false" >
                <group>
                    <group>
                        <field name="company_id" readonly="1"/>
                        <field name="domain_day" invisible="1"/>
                        <field name="domain_employee" invisible="1"/>
                        <field name="user_ids" options='{"no_open": True}' invisible="1"/>
                        <field name="s_identification_id" readonly="True"/>
                        <field name="employee_multi_id" options='{"no_open": True}'/>
                        <field name="job_code_compute" invisible="1"/>
                    </group>
                    <group>
                        <field name="month" invisible="1"/>
                        <field name="year" invisible="1"/>
                        <field name="day" invisible="1"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="shifts" invisible="0" options='{"no_open": True}'/>
                        <field name="date_from" invisible="0"/>
                        <field name="date_to"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="sea_hr_calendar_view_calendar" model="ir.ui.view">
        <field name="name">sea.hr.calendar.calendar</field>
        <field name="model">sea.hr.calendar</field>
        <field name="arch" type="xml">
            <calendar js_class="calendar_calendar" date_start="date_from" date_stop="date_to" quick_add="False" string="Calendar" color="shifts" mode="month">
                <field name="shifts_name"/>
                <field name="employee_multi_id" invisible="1"/>

                <field name="domain_day" invisible="1"/>
                <field name="domain_employee" invisible="1"/>
                <field name="user_ids" options='{"no_open": True}' invisible="1"/>

                <field name="job_code_compute" invisible="1"/>
                <field name="company_code" invisible="1"/>
                <field name="department_code" invisible="1"/>
                <field name="job_code" invisible="1"/>
            </calendar>
        </field>
    </record>

