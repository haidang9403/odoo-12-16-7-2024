<!--                </field>-->
<!--                -->
                <xpath expr="//page[@name='public']" position="before">
                    <xpath expr="//page[@name='personal_information']" position="move"/>
                </xpath>
                <xpath expr="//page[@name='public']" position="after">
                    <xpath expr="//page[@name='hr_settings']" position="move"/>
                </xpath>

                <xpath expr="//button[@name='toggle_active']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
<!--                <field name='mobile_phone' position="replace">-->
<!--                    <field name="mobile_phone_compute" widget="phone" readonly="0"/>-->
<!--                </field>-->
<!--                <field name='work_phone' position="replace">-->
<!--                    <field name="work_phone_compute" widget="phone" readonly="0"/>-->
<!--                </field>-->
                <field name="user_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//page[@name='public']/group" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
<!--                <xpath expr="//page[@name='public']/group/group[2]" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
                <xpath expr="//page[@name='public']" position="inside">
                    <group colspan="2">
                        <group string="Employee Status">
                            <field name="seagroup_join_date" readonly="0" required="1"/>
                            <field name="official_contract_seagroup" readonly="1"/>
                            <field name="sea_company_ids_temp" invisible="1"/>
                             <field name="sea_company_ids" string="Working Companies" widget="many2many_tags"
                                    options="{'no_create': True}" domain="[('id','in',sea_company_ids_temp)]"/>
<!--                                    options="{'no_create': True}" domain="[('id','in',sea_company_ids_temp)]" readonly="1"/>-->
<!--                            <field name="primary_company_compute" />-->
<!--                            <field name="official_contract" invisible="1"/>-->
                            <field name="official_contract" readonly="1" string="Official Contract (OLD VERSION)"/>
                            <field name="sea_employee_level" options="{'no_create': True}"/>
                            <field name="manager"/>
                            <field string="Related User" name="user_id"/>
                        </group>
<!--                        <group string="Current Status">-->
<!--                            <field name="employee_current_status_compute" readonly="0"/>-->
<!--                            <field name="reason_leaving_compute" readonly="0"/>-->
<!--                            <field name="resignation_date_compute" readonly="0"/>-->
<!--                            <field name="leaving_to_date_compute" readonly="0"/>-->
<!--                        </group>-->
                        <group string="Personal Income Tax">
                            <field name="tax_tncn_code"/>
                            <field name="number_of_dependents"/>
                            <field name="info_dependents"/>
                        </group>
                         <group string="Social Insurance">
                             <field name="social_insurance_number"/>
                             <field name="health_insurance_number" string="Health Insurance Number" widget="employees_optional"/>
                             <field name="place_of_initial_medical_examination_and_treatment"/>
    <!--                            <field name="insurance_status_m_compute" readonly="0"/>-->
    <!--                            <field name="note_insurance_status_compute" readonly="0"/>-->
                         </group>

                        <group string="Salary Info (Sum) (OLD VERSION)" groups="hr.group_hr_manager">
                            <field name="sea_bank_account" class="oe_edit_only" invisible="1"/>
                            <field name="sea_net_salary" class="oe_inline" readonly="1"/>
                            <field name="sea_contract_salary" class="oe_inline" readonly="1"/>
                            <field name="sea_extend_salary" class="oe_inline" readonly="1"/>
                        </group>

                        <group string="Salary Info SeaGroup (Sum)" groups="hr.group_hr_manager">
                            <field name="sea_net_salary_seagroup" class="oe_inline"/>
                            <field name="sea_contract_salary_seagroup" class="oe_inline" />
                            <field name="sea_extend_salary_seagroup" class="oe_inline"  />
<!--                            <field name="sum_salary_seagroup" class="oe_inline"  />-->
                        </group>

                        <group string="Current Contract">
                            <field name="medic_exam" string="Medical Exam"/>
                            <field name="vehicle"/>
                        </group>
                        <group string='Attendance' groups="hr_attendance.group_hr_attendance_user">
                            <field name="barcode"/>
                            <field name="pin" groups="hr_attendance.group_hr_attendance_use_pin"/>
                            <field name="manual_attendance" attrs="{'invisible': [('user_id', '=', False)]}"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>

        <record id="seatek_employees_public_group" model="ir.ui.view">
            <field name="name">seatek.employees.public.group</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="seatek_employees_public"/>
            <field name = "groups_id" eval = "[(6, 0, [117])]" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='toggle_active']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr ="//field[@name='sea_company_ids']" position = "attributes">
                    <attribute name = "readonly"> 0 </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>