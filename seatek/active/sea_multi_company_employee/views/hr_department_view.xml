<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_managers_department_form_inherit" model="ir.ui.view">
            <field name="name">hr.department.managers.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="sea_employee_extend.view_department_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="before">
                    <field name="manager_ids" widget="many2many_tags"/>
                    <field name="parent_id"/>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="parent_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

