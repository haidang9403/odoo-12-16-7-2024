    <record id="group_hr_view_edit" model="res.groups">
        <field name="name">SC user(Never for HR)</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="comment">The user will have access or edit personal information.</field>
    </record>
    <record id="group_hr_operator" model="res.groups">
        <field name="name">HR Operator</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="comment">The user will have access or edit personal information.</field>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>

    <record id="hr_employee_multi_company_rule" model="ir.rule">
        <field name="name">Mode multi-company-employee rule</field>
        <field name="model_id" ref="model_hr_employee_multi_company"/>
