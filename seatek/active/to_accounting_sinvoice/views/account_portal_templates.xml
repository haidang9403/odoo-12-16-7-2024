<odoo>
    <template id="portal_invoice_page" name="Portal Invoice : E-invoice portal link" inherit_id="account.portal_invoice_page" >
    	<xpath expr="//t[@t-set='entries']/ul/li/div/div[./a[hasclass('o_portal_invoice_print')]]" position="after">
    		<div class="btn-group flex-grow-1 ml-1 mb-1">
				<a
					class="btn btn-secondary btn-block o_print_btn o_portal_invoice_xml"
					t-att-href="invoice.get_portal_url(report_type='xml', download=True)"
					id="print_invoice_xml" title="XML" target="_blank">
					<i class="fa fa-file-code-o" />
					XML
				</a>
			</div>
    	</xpath>
        <xpath expr="//div[hasclass('o_portal_page_size')]" position="before">
            <div t-if="invoice.sinvoice_reservation_code" class="o_portal_page_size" style="margin-bottom: 20px;">
            	<div class="o_portal_html_view shadow">
            		<div class="container" style="padding:20px;">
            			<h2>Legal E-Invoice</h2>
            			<p>The legal e-invoice numbered <b t-esc="invoice.legal_number" /> has been issued to you with S-Invoice. You can login S-Invoice system for the original invoice:</p>
            			<ul>
            				<li>
            					URL: <a href="https://www.xuathoadon.com.vn/" target="_blank">https://www.xuathoadon.com.vn</a>
            				</li>
            				<li>
            					Our Tax Identification Number: <b t-esc="invoice.company_id.vat" />
            				</li>
            				<li>
            					Secret Code: <b t-esc="invoice.sinvoice_reservation_code" />
            				</li>
            			</ul>
            		</div>
            	</div>
            </div>
        </xpath>
    </template>
</odoo>
