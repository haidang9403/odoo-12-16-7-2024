    <record id="assign_oder_report_line_view_tree" model="ir.ui.view">
        <field name="name">seatek.assign.order.line.tree</field>
        <field name="model">seatek.assign.order.line</field>
        <field name="arch" type="xml">
            <tree string="Assign Order Line" create="false">
                <field name="date"/>
                <field name="ref" string="Reference"/>
                <field name="product_id" string="Product"/>
                <field name="location_from" string="From"/>
                <field name="location_to" string="To"/>
                <field name="reserve_qty" string="Reserve Qty"/>
