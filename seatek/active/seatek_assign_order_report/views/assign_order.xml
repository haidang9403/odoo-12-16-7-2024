        <field name="name">seatek.assign.order.tree</field>
        <field name="model">seatek.assign.order</field>
        <field name="arch" type="xml">
            <tree string="Inventory report">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_assign_order_report_view" model="ir.actions.act_window">
        <field name="name">Các dòng chuyển kho đang giữ sản phẩm nhưng chưa hoàn thành</field>
