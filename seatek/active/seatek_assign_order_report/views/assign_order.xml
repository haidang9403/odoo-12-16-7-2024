        <field name="name">seatek.assign.order.line.search.tree</field>
        <field name="model">seatek.assign.order.line</field>
        <field name="arch" type="xml">
            <search string="Search">
                <group expand="1" string="Group By">
                    <filter name="groupby_ref" context="{'group_by': 'ref'}" string="Reference"/>
                    <filter name="groupby_order" context="{'group_by': 'sale_id'}" string="Sale Order"/>
                    <filter name="groupby_product" context="{'group_by': 'product_id'}" string="Product"/>
                    <filter name="groupby_date" context="{'group_by': 'date'}" string="Date"/>
                    <filter name="groupby_from" context="{'group_by': 'location_from'}" string="From"/>
                    <filter name="groupby_to" context="{'group_by': 'location_to'}" string="To"/>
                </group>
            </search>
        </field>
    </record>

