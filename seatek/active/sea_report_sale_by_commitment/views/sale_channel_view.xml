<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_channel_form" model="ir.ui.view">
            <field name="name">sale.channel.form</field>
            <field name="model">sale.channel</field>
            <field name="arch" type="xml">
                <form string="Sale Channel" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Channel Name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group name="first" col="2">
                            <field name="parent_id" class="oe_inline" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sale_channel_tree" model="ir.ui.view">
            <field name="name">sale.channel.tree</field>
            <field name="model">sale.channel</field>
            <field name="arch" type="xml">
                <tree string="Sales Channel">
                    <field name="complete_name" string="Channel Categories"/>
                    <field name="company_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_sale_channel" model="ir.actions.act_window">
            <field name="name">Sales Channel Categories</field>
            <field name="res_model">sale.channel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem id="menu_sale_channel"
                  name="Sales Channel"
                  parent="sale.menu_sale_config"
                  action="action_sale_channel"
                  sequence="1"
                  groups="base.group_user"/>
    </data>
</odoo>