<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="invoice_product_uom_form" model="ir.ui.view">
			<field name="name">invoice.unit.of.measure.form</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
                <xpath expr="//field[@name='uom_po_id']" position="after">
					<field name="sea_unit_of_measure" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
				</xpath>
            </field>
        </record>
    </data>
</odoo>