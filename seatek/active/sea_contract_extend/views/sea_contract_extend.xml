<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_contract_view_search_extend" model="ir.ui.view">
            <field name="name">hr.contract.search.extend</field>
            <field name="model">hr.contract</field>
            <field name="arch" type="xml">
                <search string="Search Contract">
                    <field name="contract_category"/>
                    <group expand="1" string="Group By">
                        <filter string="Type" name='group_by_type_id' domain="[]" context="{'group_by': 'type_id'}"/>
                        <filter string="Ref Contract" name='group_by_ref_contract_id' domain="[]" context="{'group_by': 'ref_contract_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="hr_contract.action_hr_contract" model="ir.actions.act_window">
            <field name="search_view_id" ref="hr_contract_view_search_extend"></field>
            <field name="context">{'search_default_group_by_state': 0}</field>
            <field name="context">{'search_default_group_by_type_id': 1,'search_default_group_by_ref_contract_id': 1}</field>
        </record>
        <record model="ir.ui.view" id="hr_contract_extend_form_view">
            <field name="name">hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="contract_category"/>
                    <!--Khanh-->
                    <field name="ref_contract_id" attrs="{'required': [('contract_category', '=', 'addition')], 'invisible':[('contract_category', '=', 'contract')]}"/>
                    <!--                    -->
                    <field name="contract_period_id"/>
                    <field name="contract_term"/>         
                </field>
                <field name="department_id" position="attributes">
                    <attribute name="domain">[('company_id','=',company_id)]</attribute>
                </field>
                <field name="job_id" position="attributes">
                    <attribute name="domain">[('department_id','=',department_id)]</attribute>
                </field>
<!--                <field name="wage" position="attributes">-->
<!--                    <attribute name="groups">sea_multi_company_employee.group_hr_operator</attribute>-->
<!--                </field>-->
                <!--////////-->

                <field name="advantages" position="after">
                    <label for="contract_extend_salary"/>
                    <div class="o_row" name="contract_extend_salary">
                        <field name="contract_extend_salary" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                </field>

            </field>
        </record>
        <!--Khanh-->
        <record id="hr_contract_extend_form_view_hide_salary" model="ir.ui.view">
            <field name="name">hr.contract.form.view.hide.salary</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract_extend_form_view"/>
            <field name="arch" type="xml">
               <xpath expr="//page[@name='information']" position="attributes">
                <attribute name="groups">sea_multi_company_employee.group_hr_operator</attribute>
            </xpath>
            </field>
        </record>

        <record id="hr_contract_view_tree_end_days" model="ir.ui.view">
            <field name="name">hr.contract.view.tree.inherit.end.days</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="decoration-danger">state == 'close' or state == 'cancel'</attribute>
                </tree>
                <field name="ref_contract_id" position="replace">
                    <field name="ref_contract_id" invisible="1"/>
                </field>
                <field name="employee_id" position="replace">
                    <field name="employee_id" invisible="1"/>
                </field>
                <field name="company_id" position="replace">
                    <field name="company_id" invisible="1"/>
                </field>
                <field name="job_id" position="replace">
                    <field name="job_id" invisible="1"/>
                </field>
                <field name="type_id" position="replace">
                    <field name="type_id" invisible="1"/>
                </field>
                <field name="contract_category" position="replace">
                    <field name="contract_category" invisible="1"/>
                </field>
                <field name="contract_period_id" position="replace">
                    <field name="contract_period_id" invisible="1"/>
                </field>
                <field name="date_start" position="replace">
                    <field name="date_start" invisible="1"/>
                </field>
                <field name="date_end" position="replace">
                    <field name="date_end" invisible="1"/>
                </field>
                <field name="name" position="after" decoration-danger="state=='open'">
                    <field name="contract_category"/>
                    <field name="employee_id"/>
                    <field name="contract_term"/>
                    <field name="date_start"/>
                    <field name="ref_contract_id"/>
                    <field name="notes"/>
                    <field name="date_end"/>
                    <field name="state" invisible="1"/>
                </field>
            </field>
        </record>
