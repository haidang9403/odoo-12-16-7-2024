        <record id="action_hr_contract_period_tree" model="ir.ui.view">
            <field name="name">hr.contract.period.tree</field>
            <field name="model">hr.contract.period</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="sequence"/>
                </tree>
            </field>
         </record>
        <record id="action_hr_contract_period" model="ir.actions.act_window" >
            <field name="name">CONTRACT PERIOD</field>
            <field name="res_model">hr.contract.period</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="hr_menu_contract_period"
            name="Contract Period"
            action="action_hr_contract_period"
            parent="hr.menu_human_resources_configuration"
            sequence="5"
            groups="hr_contract.group_hr_contract_manager"/>

<!--Khanh 13:45 22/09/2022-->
        <record id="hr_contract_view_search_ref_contract_inherit" model="ir.ui.view">
            <field name="name">hr.contract.search.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract_operating_unit.hr_contract_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='to_renew']" position="before">
                    <filter string="Contract" name="contract" domain="[('contract_category', '=', 'contract')]"/>
                    <filter string="Addition" name="contract" domain="[('contract_category', '=', 'addition')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Ref Contract" name='group_by_ref_contract'  context="{'group_by': 'ref_contract_id'}"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>