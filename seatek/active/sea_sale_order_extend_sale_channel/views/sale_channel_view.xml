<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_channel_form" model="ir.ui.view">
            <field name="name">sale.channel.form</field>
            <field name="model">sale.channel</field>
            <field name="arch" type="xml">
                <form string="Sale Channel" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <field name="name"  required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_channel_item_form" model="ir.ui.view">
            <field name="name">sale.channel.item.form</field>
            <field name="model">sale.channel.item</field>
            <field name="arch" type="xml">
                <form string="Sale Channel Item" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <field name="name"  required="1"/>
                            <field name="channel_catalog"  required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_channel_tree" model="ir.ui.view">
            <field name="name">sale.channel.tree</field>
            <field name="model">sale.channel</field>
            <field name="arch" type="xml">
                <tree string="Sale Channals">
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="sale_channel_item_tree" model="ir.ui.view">
            <field name="name">sale.channel.item.tree</field>
            <field name="model">sale.channel.item</field>
            <field name="arch" type="xml">
                <tree string="Sale Channel Item">
                    <field name="name"/>
                    <field name="channel_catalog"/>
                    <field name="complete_name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_sale_channel_category" model="ir.actions.act_window">
            <field name="name">Sale Channel Category</field>
            <field name="res_model">sale.channel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record id="action_sale_channel_item" model="ir.actions.act_window">
            <field name="name">Sale Channel Item</field>
            <field name="res_model">sale.channel.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem id="menu_sale_channel"
                  name="Sale Channel"
                  parent="sale.menu_sale_config"
                  sequence="1"
                  groups="base.group_user"/>
        <menuitem id="menu_sale_channel_category"
                  name="Sale Channel Category"
                  action="action_sale_channel_category"
                  parent="menu_sale_channel"
                  sequence="1"
                  groups="base.group_user"/>
        <menuitem id="menu_sale_channel_item"
                  name="Sale Channel Item"
                  action="action_sale_channel_item"
                  parent="menu_sale_channel"
                  sequence="2"
                  groups="base.group_user"/>
    </data>
</odoo>