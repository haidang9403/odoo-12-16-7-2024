<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="ir_cron_invoice_pos_auto_push" model="ir.cron">
			<field name="name">Push invoice to issue (POS)</field>
			<field name="model_id" ref="model_account_invoice" />
			<field name="user_id" ref="base.user_root" />
			<field name="state">code</field>
			<field name="interval_number">1</field>
			<field name="interval_type">minutes</field>
			<field name="numbercall">-1</field>
			<field eval="False" name="doall" />
			<field name="code">model.cron_push_invoice_to_issue()
			</field>
		</record>
		<record id="ir_cron_invoice_pos_auto_consolidation" model="ir.cron">
			<field name="name">Consolidation Invoice (POS)</field>
			<field name="model_id" ref="model_account_invoice" />
			<field name="user_id" ref="base.user_root" />
			<field name="state">code</field>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field eval="False" name="doall" />
			<field name="code">model.cron_pos_consolidation_invoice()
			</field>
		</record>
		<record id="cron_pos_issue_invoice_customer" model="ir.cron">
			<field name="name">Issue TS24 invoice to customer (POS)</field>
			<field name="model_id" ref="model_invoice_consolidation" />
			<field name="user_id" ref="base.user_root" />
			<field name="state">code</field>
			<field name="interval_number">3</field>
			<field name="interval_type">minutes</field>
			<field name="numbercall">-1</field>
			<field eval="False" name="doall" />
			<field name="code">model.cron_pos_issue_invoice_customer()
			</field>
		</record>
		<record id="cron_pos_issue_invoice_not_customer" model="ir.cron">
			<field name="name">Issue TS24 invoice with no customer (POS)</field>
			<field name="model_id" ref="model_invoice_consolidation" />
			<field name="user_id" ref="base.user_root" />
			<field name="state">code</field>
			<field name="interval_number">3</field>
			<field name="interval_type">minutes</field>
			<field name="numbercall">-1</field>
			<field eval="False" name="doall" />
			<field name="code">model.cron_pos_issue_invoice_not_customer()
			</field>
		</record>
	</data>
</odoo>