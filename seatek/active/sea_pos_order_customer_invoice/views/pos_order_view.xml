<?xml version="1.0"?>
<odoo>
    <record id="view_pos_pos_form_view_field" model="ir.ui.view">
        <field name="name">pos.order.form.view.inherit_view_filed</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_pos_order_invoice']" position="before">
                <button name="action_pos_order_invoice" string="Create Invoice" type="object" class="oe_highlight"
                        attrs="{'invisible': [('state','=', 'invoiced')]}"/>
            </xpath>
            <field name="partner_id" position="after">
                <field name="partner_vat_id"/>
            </field>
        </field>
    </record>
</odoo>