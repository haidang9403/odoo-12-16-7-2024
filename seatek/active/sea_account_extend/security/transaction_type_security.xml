<odoo>
    <record id="transaction_type_comp_rule" model="ir.rule">
        <field name="name">transaction type multi-company</field>
        <field name="model_id" ref="model_transaction_type"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
    <record id="account_determination_comp_rule" model="ir.rule">
        <field name="name">account determination multi-company</field>
        <field name="model_id" ref="model_account_determination"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
</odoo>