<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="customer_category_tax_form" model="ir.ui.view">
            <field name="name">customer.category.tax.form</field>
            <field name="model">customer.category.tax</field>
            <field name="arch" type="xml">
                <form string="Customer Category Tax" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <field name="company_id"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_category_tax_tree" model="ir.ui.view">
            <field name="name">customer.category.tax.tree</field>
            <field name="model">customer.category.tax</field>
            <field name="arch" type="xml">
                <tree string="Customer Category Tax">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_customer_category_tax" model="ir.actions.act_window">
            <field name="name">Customer Category Tax</field>
            <field name="res_model">customer.category.tax</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>

        </record>

<!--        <menuitem id="menu_customer_product_tax" name="Customer Taxes"-->
<!--                  parent="account.menu_finance" sequence="73" groups="account.group_account_manager"/>-->

        <menuitem action="action_customer_category_tax"
                  id="menu_action_customer_category_tax" parent="menu_customer_product_tax" sequence="6"/>
    </data>
</odoo>