<odoo>
    <record id="customer_category_tax_comp_rule" model="ir.rule">
        <field name="name">Customer category tax multi-company</field>
        <field name="model_id" ref="model_customer_category_tax"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
    <record id="customer_product_tax_comp_rule" model="ir.rule">
        <field name="name">Customer product tax multi-company</field>
        <field name="model_id" ref="model_customer_product_tax"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
</odoo>