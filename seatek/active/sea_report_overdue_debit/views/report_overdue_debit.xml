    <record id="action_overdue_debit_invoice_report" model="ir.actions.server">
        <field name="name">List of overdue invoice debt involved</field>
        <field name="model_id" ref="model_report_overdue_debit"/>
        <field name="state">code</field>
        <field name="code">action = model.action_open_report_invoice()
        </field>
    </record>


    <menuitem id="menu_overdue_debit_invoice_report"
              name="List of overdue invoice debt involved"
              parent="account.account_reports_management_menu"
              sequence="13"
              action="action_overdue_debit_invoice_report"/>

    <record id="report_overdue_debit_search_view" model="ir.ui.view">
        <field name="name">report_overdue_debit_search_view</field>
        <field name="model">report.overdue.debit</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <search string="Overdue debit search">
                <field name="partner_id" string="Khách hàng"/>
                <field name="ref" string="Số tham chiếu"/>
                <field name="date_invoice" string="Ngày hóa đơn"/>
                <field name="date_due" string="Ngày đến hạn"/>
                <field name="origin" string="Tài liệu gốc"/>
                <group expand='0' string='Group by...'>
                    <filter string='Khách hàng' name="partner_id_group" context="{'group_by': 'partner_id'}"/>
                    <filter string='Số tham chiếu' name="ref_group" context="{'group_by': 'ref'}"/>
                    <filter string='Ngày hóa đơn' name="date_invoice_group" context="{'group_by': 'date_invoice'}"/>
                    <filter string='Ngày đến hạn' name="date_due_group" context="{'group_by': 'date_due'}"/>
                    <filter string='Tài liệu gốc' name="origin_group" context="{'group_by': 'origin'}"/>
                </group>
            </search>
        </field>
    </record>

