<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="asset_inventory_report_view_form" model="ir.ui.view">
            <field name="name">asset.inventory.report.view.form</field>
            <field name="model">asset.inventory.report</field>
            <field name="arch" type="xml">
                <form string="Asset Report">
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="department_id"/>
                            <field name="location_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="export_xlsx" string="Export XLS" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="asset_inventory_report_action" model="ir.actions.act_window">
            <field name="name">Asset Inventory Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.inventory.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <report string="Asset Inventory Report"
                id="asset_inventory_report"
                model="asset.inventory.report"
                name="sea_asset_base.asset_inventory_report_xls"
                file="BaoCaoKiemKe"
                report_type="xlsx"
                attachment_use="False"/>
        <menuitem action="asset_inventory_report_action"
                  id="menu_asset_inventory_report"
                  name="Asset Inventory Report"
                  parent="sea_asset_base.menu_reporting_asset"
                  sequence='3'
                  groups="group_asset_officer"/>
    </data>
</odoo>
