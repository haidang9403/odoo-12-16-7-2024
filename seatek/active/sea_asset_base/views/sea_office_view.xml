<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_office_form" model="ir.ui.view">
            <field name="name">sea.office.form</field>
            <field name="model">sea.office</field>
            <field name="arch" type="xml">
                <form string="Sea Office" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Office Name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="office_code"/>
                            <field name="address" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sea_office_tree" model="ir.ui.view">
            <field name="name">sea.office.tree</field>
            <field name="model">sea.office</field>
            <field name="arch" type="xml">
                <tree string="Sea Office">
                    <field name="name"/>
                    <field name="office_code"/>
                    <field name="address"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_sea_office" model="ir.actions.act_window">
            <field name="name">Sea Office</field>
            <field name="res_model">sea.office</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>


        <menuitem id="menu_sea_office"
                  name="Sea Office"
                  parent="menu_configuration_asset"
                  action="action_sea_office"
                  sequence="1"
                  groups="group_asset_officer"/>
    </data>
</odoo>