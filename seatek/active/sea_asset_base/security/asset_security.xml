<odoo>
    <record model="ir.module.category" id="module_category_asset">
        <field name="name">Asset Management</field>
        <field name="description">Category For Asset</field>
    </record>

    <record id="group_asset_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_asset"/>
    </record>
    <record id="group_asset_readonly" model="res.groups">
        <field name="name">Asset Readonly</field>
        <field name="category_id" ref="module_category_asset"/>
    </record>
    <record id="group_asset_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_asset"/>
        <field name="implied_ids" eval="[(4, ref('group_asset_officer'))]"/>
    </record>
    <record id="group_asset_accounting" model="res.groups">
        <field name="name">Accounting</field>
        <field name="category_id" ref="module_category_asset"/>
        <field name="implied_ids" eval="[(4, ref('group_asset_officer'))]"/>
    </record>

</odoo>