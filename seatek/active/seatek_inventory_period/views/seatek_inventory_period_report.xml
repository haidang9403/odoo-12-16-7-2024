<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="inventory_period_report_view_form" model="ir.ui.view">
        <field name="name">vio.inventory.report.form</field>
        <field name="model">vio.inventory.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_inventor_period_report" string="Tính giá trị" type="object" class="btn-primary"/>
                    <button name="action_open_detail" type="object" string="Xem chi tiết" />
                </header>
                <sheet>
                    <group>
                        <group string="Chu kỳ">
                            <field name="name" invisible="1"/>
                            <field name="date_range_type"/>
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                        <group string="Lọc theo">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="location_ids" options="{'no_create': 1}" widget="many2many_tags" attrs="{'required': [('location_ids','!=', False)]}"/>
                            <field name="categ_ids" options="{'no_create': 1}" widget="many2many_tags"/>
                            <field name="product_ids" options="{'no_create': 1}" widget="many2many_tags"/>
                            <field name="hide_zero_line"/>
                            <!-- <field name="type_get_value" /> -->
                            <!-- <field name="value" /> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết xuất nhập tồn">
                            <field name="inventory_report_line_ids" readonly="1" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="inventory_period_report_view_tree" model="ir.ui.view">
        <field name="name">vio.inventory.report.tree</field>
        <field name="model">vio.inventory.report</field>
        <field name="arch" type="xml">
            <tree string="Inventory report">
                <field name="date_from" />
                <field name="date_to" />
                <field name="location_ids" widget="many2many_tags" />
                <field name="type_get_value" />
                <field name="value" />
            </tree>
        </field>
    </record>

    <record id="action_inventory_period_report_view" model="ir.actions.act_window">
        <field name="name">Inventory Period Report</field>
        <field name="res_model">vio.inventory.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="inventory_period_report_view_form"/>
        <field name="context">{'create': 0, 'delete': 0}</field>
    </record>

    <record id="action_inventory_period_report" model="ir.actions.server">
        <field name="name">Inventory Report</field>
        <field name="model_id" ref="model_vio_inventory_report"/>
        <field name="state">code</field>
        <field name="code">
action_values = env.ref('seatek_inventory_period.action_inventory_period_report_view').read()[0]
res_id = env['vio.inventory.report'].search([('user_id','=',env.user.id)], limit=1)
if not res_id:
    res_id = env['vio.inventory.report'].create({'user_id': env.user.id})
res_id.action_remove_data_inventory_report_line()
action_values.update({'res_id': res_id.id})
action = action_values
        </field>
    </record>

    <menuitem id="menu_action_inventory_period_report" name="Inventory Report"
              parent="seatek_inventory_period.menu_inventory_period"
              action="action_inventory_period_report"
              sequence="52"
              groups="stock.group_stock_manager"/>
</odoo>