<odoo>
    <data>
        <template id="message_activity_assigned_vietnamese">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <i><b><span t-field="document_detail.company_id.name"/></b></i><br/><br/>
                <span t-field="document_detail.employee_id.name"/> - <span t-field="document_detail.employee_id.s_identification_id"/><br />
                HĐLĐ <span t-field="activity.res_name"/>
                 sẽ hết hạn vào ngày <span t-field="activity.date_deadline"/>.<br />
                <p style="margin: 16px 0px 16px 0px;">
                    <a t-att-href="'/web#id=%s&amp;action=766&amp;model=hr.contract&amp;view_type=form&amp;menu_id=491' % (activity.contract_id.id)"
                        style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                        Xem Thông Tin HĐLĐ
<!--                        <t t-esc="model_description or 'document'"/>-->
                    </a>
                </p>
                <div t-if="activity.note" style="margin-top: 8px;" t-field="activity.note"/>
            </div>
        </template>

