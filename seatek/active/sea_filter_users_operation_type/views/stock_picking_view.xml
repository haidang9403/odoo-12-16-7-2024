<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stock_picking_form_inherit">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="picking_type_id" position="replace">
                    <field name="picking_type_id" options="{'no_create': True}"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="filter_operation_type_form">
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form" />
            <field name="arch" type="xml">
                <field name="code" position="before">
                    <field name="company_id" options="{'no_create_edit': True, 'no_quick_create': True}"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="filter_operation_type_tree">
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_tree" />
            <field name="arch" type="xml">
                <field name="sequence_id" position="after">
                    <field name="company_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>