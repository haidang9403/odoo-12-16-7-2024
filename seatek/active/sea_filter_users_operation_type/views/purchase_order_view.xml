<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_operation_type_form" model="ir.ui.view">
        <field name="name">purchase.order.operation.type.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="picking_type_id" position="replace">
                <field name="picking_type_id" options="{'no_create': True}"/>
            </field>
            <field name="transaction_id" position="before">
                <field name="picking_type_id" options="{'no_create': True}"/>
            </field>
        </field>
    </record>
</odoo>