<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="menu_hr_appraisal_report_search_view" model="ir.ui.view">
            <field name="name">hr.survey.user.input.line.search</field>
            <field name="model">hr.survey.user.input.line</field>
            <field name="arch" type="xml">
                <search string="Search Leads">
                    <filter name="line_open_state" string="Đang mở" domain="[('line_open_state', '=', True)]"/>
                    <filter name="line_close_state" string="Đã đánh giá xong" domain="[('line_open_state', '=', False)]"/>
                    <filter string="NHÂN VIÊN" name="group_user_input_id" context="{'group_by':'user_input_id'}"/>
                    <filter string="PHÒNG BAN" name="group_department_id" context="{'group_by':'department_id'}"/>
                    <filter string="ĐƠN VỊ HOẠT ĐỘNG" name="group_operating_unit_id" context="{'group_by':'operating_unit_id'}"/>
                    <filter string="Mục tiêu cá nhân (Gắn liền với KPIs của Đơn vị)" name="question_name" domain="[('question_name','like','%Mục tiêu cá nhân%')]"/>
                    <filter string="Các công việc thường xuyên (theo MTCV)" name="question_name" domain="[('question_name','like','%Các công việc thường xuyên (theo MTCV)%')]"/>
                    <filter string="Các công việc đột xuất/ được phân công khác" name="question_name" domain="[('question_name','like','%Các công việc đột xuất/ được phân công khác%')]"/>
                    <!--                    <filter string="Appraisal" name="group_appraisal" context="{'group_by':'appraisal_id'}"/>-->
                </search>
            </field>
        </record>

        <record id="menu_hr_appraisal_report_action" model="ir.actions.act_window">
            <field name="name">BÁO CÁO CHI TIẾT KPIS</field>
            <field name="res_model">hr.survey.user.input.line</field>
            <field name="view_mode">pivot,tree,form</field>
            <field name="group_id" ref="seatek_hr_appraisal.hr_appraisal_company_manager"/>
            <field name="domain">[('summary_level_report','=',2),('page_name','like','%KPI%'),('question_name','!=',None),('question_name','!=','')]</field>
            <field name="search_view_id" ref="menu_hr_appraisal_report_search_view"/>
            <field name="context">{'search_default_line_open_state': 1}</field>
            <field name="view_id" eval="False"/>
        </record>

        <record id="menu_hr_appraisal_report_action_tree_view" model="ir.ui.view">
            <field name="name">HR Appraisal Manage View</field>
            <field name="model">hr.survey.user.input.line</field>

            <field name="arch" type="xml">
                <tree delete="0" edit="0" create="0">
                    <field name="question_name" readonly="1" groups="seatek_hr_appraisal.hr_appraisal_manager"/>
                    <field name="user_input_id" string="Người Thực Hiện" groups="seatek_hr_appraisal.hr_appraisal_manager"/>
                    <field name="value" readonly="1" groups="seatek_hr_appraisal.hr_appraisal_manager"/>
                    <field name="value_manager" readonly="1" groups="seatek_hr_appraisal.hr_appraisal_manager"/>
                    <field name="value_smanager" readonly="1" groups="seatek_hr_appraisal.hr_appraisal_manager"/>
                    <field name="value_hddg" readonly="1" groups="seatek_hr_appraisal.hr_appraisal_manager"/>
                    <!--                    <group expand="0" string="Group By">-->
                    <!--                        <filter string="User" name="group_user_input_id" context="{'group_by':'user_input_id'}"/>-->
                    <!--                    </group>-->
                </tree>
            </field>
        </record>

        <record id="menu_hr_appraisal_report_action_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="menu_hr_appraisal_report_action_tree_view"/>
            <field name="act_window_id" ref="menu_hr_appraisal_report_action"/>
        </record>

        <record id="menu_hr_appraisal_report_action_pivot_view" model="ir.ui.view">
            <field name="name">HR Appraisal Manage View</field>
            <field name="model">hr.survey.user.input.line</field>
            <field name="arch" type="xml">
                <pivot string="View Pivot">
                    <field name="parent_page_id" type="row"/> <!--domain="[('summary_id', '=', None)]"-->
                    <field name="user_input_id" type="col"/>
                    <field name="value" type="measure"/>
                    <field name="value" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="menu_hr_appraisal_report_action_pivot" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="menu_hr_appraisal_report_action_pivot_view"/>
            <field name="act_window_id" ref="menu_hr_appraisal_report_action"/>
        </record>
        <record id="menu_hr_appraisal_report_action_form_view" model="ir.ui.view">
            <field name="name">HR Appraisal Manage Form View</field>
            <field name="model">hr.survey.user.input.line</field>
            <field name="arch" type="xml">
                <form  create="false" delete="false" duplicate="false" edit="0">
                </form>
            </field>
        </record>
        <record id="menu_hr_appraisal_report_action_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="menu_hr_appraisal_report_action_tree_view"/>
            <field name="act_window_id" ref="menu_hr_appraisal_report_action"/>
        </record>
    </data>
