<templates>
    <t t-name="AppraisalFilter">
        <div class="sign_document_fileter" data-qweb="AppraisalFilter">
            <a id='document-filter' type="button" class="btn btn-link dropdown-toggle document_text" data-toggle="dropdown">
                <span class="fa fa-filter"/>
               Tất cả văn bản
            </a>
            <div class="dropdown-menu o_filters_menu" role="menu">
                <span>
                    <button name="all" value="false" type="button" data-domain="[(all)]" data-field="manager_status" data-operator="!="
                            data-filter="false"
