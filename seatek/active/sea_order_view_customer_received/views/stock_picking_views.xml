<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="customer_receive_inherit" model="ir.ui.view">
            <field name="name">stock.picking.customer.receive.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='origin']" position="after">
                    <field name="sea_customer_received" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
