<?xml version="1.0"?>
<odoo>
    <!--     RESTAURANT PRINTERS     -->

    <record id="view_hotel_restaurant_printer_form" model="ir.ui.view">
        <field name="name">Order Printer</field>
        <field name="model">restaurant.printer</field>
        <field name="arch" type="xml">
            <form string="POS Printer">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="title"/>
                        <field name="proxy_ip"/>
                        <field name="product_product_categories_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_restaurant_printer" model="ir.ui.view">
        <field name="name">Order Printers</field>
        <field name="model">restaurant.printer</field>
        <field name="arch" type="xml">
            <tree string="Restaurant Order Printers">
                <field name="name"/>
                <field name="title"/>
                <field name="proxy_ip"/>
                <field name="product_product_categories_ids"/>
            </tree>
        </field>
    </record>

    <record id="hotel_restaurant_printer_action" model="ir.actions.act_window">
        <field name="name">Order Printers</field>
        <field name="res_model">restaurant.printer</field>
        <field name="view_id" eval="False"/>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new restaurant order printer
            </p>
            <p>
                Order Printers are used by restaurants and bars to print the
                order updates in the kitchen/bar when the waiter updates the order.
            </p>
            <p>
                Each Order Printer has an IP Address that defines the IoT Box/Hardware
                Proxy where the printer can be found, and a list of product categories.
                An Order Printer will only print updates for products belonging to one of
                its categories.
            </p>
        </field>
    </record>

    <record id="hotel_restaurant_printer_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hotel_restaurant_printer"/>
        <field name="act_window_id" ref="hotel_restaurant_printer_action"/>
    </record>
    <record id="hotel_restaurant_printer_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hotel_restaurant_printer_form"/>
        <field name="act_window_id" ref="hotel_restaurant_printer_action"/>
    </record>

</odoo>
