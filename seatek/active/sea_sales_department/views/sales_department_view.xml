<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sales_department_form" model="ir.ui.view">
            <field name="name">sales.department.form</field>
            <field name="model">sales.department</field>
            <field name="arch" type="xml">
                <form string="Sales Department" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Department Name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sales_department_tree" model="ir.ui.view">
            <field name="name">sales.department.tree</field>
            <field name="model">sales.department</field>
            <field name="arch" type="xml">
                <tree string="Sales Department">
                    <field name="name" string="Department"/>
                    <field name="company_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_sales_department" model="ir.actions.act_window">
            <field name="name">Sales Department</field>
            <field name="res_model">sales.department</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem id="menu_sales_department"
                  name="Sales Department"
                  parent="sale.menu_sale_config"
                  action="action_sales_department"
                  sequence="1"
                  groups="sales_team.group_sale_manager"/>
    </data>
</odoo>